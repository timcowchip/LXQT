# Description: A library that allows developers to access PolicyKit API with a nice Qt-style API
# URL: https://www.kde.org/
# Maintainer: Chris Farrell, timcowchip at gmail dot com
# Depends on: cmake git polkit qt5

name=polkit-qt5
version=0.112.0+git20180107
release=3

source=("http://download.kde.org/stable/apps/KDE4.x/admin/${pkgbase}-1-${version}.tar.bz2")


build() {
  mkdir -p build

  cd build
  cmake ../$pkgbase-1 \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_DESTINATION=/usr/lib
  make

  make DESTDIR="$pkgdir" install
}
